# Environment Configuration
PORT=3000
NODE_ENV=development

# Database
# Replace with your MySQL connection string
DATABASE_URL="mysql://username:password@localhost:3306/your_database_name"

# JWT Authentication
# IMPORTANT: Generate a cryptographically secure 256-bit random string for production
# Example: openssl rand -base64 32
JWT_SECRET="your-secret-key-change-me"
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Application
APP_NAME="Bolt AI Salon"

# Stripe Payment Integration
# Get these from your Stripe dashboard
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_MONTHLY_PRICE_ID="price_..."
STRIPE_YEARLY_PRICE_ID="price_..."

# Twilio Telephony Integration
# Get these from your Twilio console
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1..."

# Demo Tenant Configuration
# The demo phone number should match what's displayed on the frontend home page
# After setting up the database, run: node prisma/seed-demo.js
# This creates a demo tenant "Demo Salon" with the phone number +15555551234
DEMO_PHONE_NUMBER="+15555551234"

# AI Services (Optional)
# Uncomment and add your API keys when ready to use AI features
# OPENAI_API_KEY=sk-...
# VAPI_API_KEY=...
# VAPI_ASSISTANT_ID=...
# ELEVENLABS_API_KEY=...
