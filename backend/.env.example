# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
# Format: mysql://username:password@host:port/database
DATABASE_URL="mysql://root:password@localhost:3306/bolt_ai_salon"

# JWT Authentication
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Application
APP_NAME="Bolt AI Salon"

# Ngrok Configuration (for local development and webhook testing)
# This URL changes each time you restart ngrok (unless you have a paid plan)
# Run ./start-ngrok.sh to automatically update this value
# Or manually update it after running: ngrok http 3000
NGROK_URL=https://your-ngrok-url.ngrok-free.app

# Twilio Configuration (for telephony features)
# Sign up at: https://www.twilio.com/
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Configure webhooks in Twilio console:
# Voice URL: {NGROK_URL}/api/webhooks/twilio/voice
# SMS URL: {NGROK_URL}/api/webhooks/twilio/sms

# Stripe Configuration (for billing and subscriptions)
# Sign up at: https://stripe.com/
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret

# Stripe Product Price IDs (create these in Stripe Dashboard)
# Monthly plan: $295/month
STRIPE_MONTHLY_PRICE_ID=price_monthly_id
# Yearly plan: $2,832/year (20% discount)
STRIPE_YEARLY_PRICE_ID=price_yearly_id

# Configure webhook in Stripe dashboard:
# Webhook URL: {NGROK_URL}/api/webhooks/stripe
# Events: customer.subscription.created, customer.subscription.updated, 
#         customer.subscription.deleted, invoice.payment_succeeded, invoice.payment_failed

# OpenAI Configuration (for AI assistant)
# Sign up at: https://platform.openai.com/signup
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Vapi Configuration (optional - for call orchestration)
# Sign up at: https://vapi.ai/
# Get credentials from: https://dashboard.vapi.ai/
VAPI_API_KEY=your_vapi_api_key
VAPI_ASSISTANT_ID=your_vapi_assistant_id

# Vapi Phone Number Configuration
# Vapi requires either VAPI_PHONE_NUMBER_ID or VAPI_PHONE_NUMBER for inbound calls
# Option 1: Use Phone Number ID (recommended - get from Vapi dashboard)
VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id
# Option 2: Use Phone Number (if you don't have a Phone Number ID)
VAPI_PHONE_NUMBER=+1234567890

# Configure webhook URL in Vapi dashboard:
# Webhook URL: {NGROK_URL}/api/ai/webhooks/vapi

# ElevenLabs Configuration (optional - for text-to-speech)
# Sign up at: https://elevenlabs.io/
# Get API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_preferred_voice_id

# Email Configuration (for notifications)
# Using SendGrid as example - sign up at: https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# Logging Configuration
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (for frontend)
CORS_ORIGIN=http://localhost:5173

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true

# Development Tools
# Set to 'true' to disable webhook signature validation in development
DISABLE_WEBHOOK_VALIDATION=false
